<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Definición de colores -->
    <color name="colorPrimary">#6200EE</color>
    <color name="colorPrimaryDark">#3700B3</color>
    <color name="colorAccent">#03DAC5</color>
    <color name="colorBackground">#FFFFFF</color>
    <color name="colorForeground">#000000</color>
    <color name="tableHeaderBackground">#E0E0E0</color>
    <color name="tableCellBackground">#F5F5F5</color>

    <!-- Tema base de la aplicación -->
    <style name="Theme.CalculadoraVLSM" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Colores de fondo y primer plano -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:colorForeground">@color/colorForeground</item>

        <!-- Configuraciones adicionales -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Estilo para encabezados de tabla -->
    <style name="TableHeaderText">
        <item name="android:background">@color/tableHeaderBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Estilo para celdas de tabla -->
    <style name="TableCellText">
        <item name="android:background">@color/tableCellBackground</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
